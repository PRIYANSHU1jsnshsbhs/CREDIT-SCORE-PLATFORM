# Moralis API Configuration
# Get your free API key from: https://moralis.io
MORALIS_API_KEY=your_moralis_api_key_here

# Server Configuration
PORT=9000
NODE_ENV=development

# ============= SMART CONTRACT CONFIGURATION =============

# Private Key for Contract Deployment and Transactions
PRIVATE_KEY=your_private_key_here

# RPC URLs for Different Blockchains
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_infura_key
POLYGON_RPC_URL=https://polygon-rpc.com/
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com/
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
AVALANCHE_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Deployed Contract Addresses (update after deployment)
ONCHAIN_SCORE_CONTRACT_ETHEREUM=0x0000000000000000000000000000000000000000
ONCHAIN_SCORE_CONTRACT_POLYGON=0x0000000000000000000000000000000000000000
ONCHAIN_SCORE_CONTRACT_BSC=0x0000000000000000000000000000000000000000
ONCHAIN_SCORE_CONTRACT_AVALANCHE=0x0000000000000000000000000000000000000000

# ============= BLOCKCHAIN EXPLORER API KEYS =============
# These are optional but recommended for enhanced data accuracy and contract verification

ETHERSCAN_API_KEY=your_etherscan_key_here
POLYGONSCAN_API_KEY=your_polygonscan_key_here
BSCSCAN_API_KEY=your_bscscan_key_here
SNOWTRACE_API_KEY=your_snowtrace_key_here

# ============= ADDITIONAL SERVICES =============

# Infura Project ID (for Ethereum)
INFURA_PROJECT_ID=your_infura_project_id

# Alchemy API Keys (alternative to Infura)
ALCHEMY_ETHEREUM_KEY=your_alchemy_ethereum_key
ALCHEMY_POLYGON_KEY=your_alchemy_polygon_key

# The Graph API Key (for DeFi data)
THEGRAPH_API_KEY=your_thegraph_api_key

